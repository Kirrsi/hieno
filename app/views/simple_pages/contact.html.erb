<h1 class="contact">Contact</h1>

<%= flash[:notice] %>

  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
  <div class="row">
    <div class="col-sm-7 picture-area">
      <div class="form-group">
        <%= image_tag("contact.jpg", class: "img-responsive contact-pic") %><br>
      </div>
    </div>
    <div class="col-sm-5" id="contact">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
      </div>
      <%= form.submit "Send", class: "btn btn-outline-dark" %>
      <% end %>
    </div>
  </div>
  <div>
    <p class="contact-info">Address: Prenzlauer Allee 45, 10405 Berlin. </p>
    <p class="contact-info">Telephone: 030-25794556. </p>
    <p class="contact-info">Mo - Fr at 9-18, Sa at 9-14.</p>
  </div>
