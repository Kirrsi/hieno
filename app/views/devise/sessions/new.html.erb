<h3 class="login h4 mb-3 font-weight-normal">SIGN IN</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control top", placeholder: "Enter Email" %>
     </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control bottom", placeholder: "Password" %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="row">
    <div class="col-sm-2 offset-sm-4" id="login-button">
      <div class="actions">
        <%= f.submit "Sign in", class: "btn btn-outline-dark form-control" %>
      </div>
      <% end %>
    </div>

    <div class="col-sm-2" id="remember">
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="row">
   <div class="col-sm-4 offset-sm-4">
   <%= render "devise/shared/links" %>
   </div>
  </div>
