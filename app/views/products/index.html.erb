<h1 class="products">Products</h1>

<div class="container">
  <div class="row" id="products-row">
    <% @products.each do |product| %>
    <div class="col-sm-4" id="products">
      <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %><br>
      <h3 class="name"><%= link_to product.name, product %></h3>
        <p class="text"><%= product.description %></p>
        <p class="text"><%= product.colour %></p>
        <p class="text"><%= product.price %></p>
    </div>
    <% end %>
  </div>
</div>
