<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container-fluid">
<div class="row" id="products-row">
<% @products.each do |product| %>
<div class="col-sm-4" id="single-product">
<%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
<h3><%= link_to product.name, product %></h3>
<p><%= product.description %></p>
<p><%= product.colour %></p>
<p><%= product.price %></p>
<p><%= link_to 'Show', product %></p>
<p><%= link_to 'Edit', edit_product_path(product) %></p>
<p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>
<% end %>
</div>
</div>

<br>

<%= link_to 'New Product', new_product_path %>
