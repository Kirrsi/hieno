<div class="container-content">
  <h3 class="show-name">
      <strong></strong>
      <%= @product.name %>
  </h3>
  <div class="row">
    <div class="col-sm-4">
      <%= image_tag(@product.image_url, class: "img-fluid") unless @product.image_url.nil? %><br><br>
      <div class="show-buttons">
      <%= link_to "Back", :back, class: "btn btn-light" %>
      <%= link_to "Previous", @product.previous, class: "btn btn-light" %>
      <%= link_to "Next", @product.next, class: "btn btn-light" %>
      </div>
    </div>

    <div class="col-sm-2 properties">
      <p class="color">
        <strong>Colour:</strong>
        <%= @product.colour %>
      </p>

      <p class="price">
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <p class="avg-rating">Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
      </p>

      <%= form_with(url: '/payments/create') do |form| %>
      <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
    </div>
  
    <div class="col-sm-6" id="gift-area">
      <h2 class="gift">Free bike service within the first 4 months after purchase.</h2>
    </div>
  </div>
</div>

<% if @product.comments.length > 0 %>
<%= render 'new_comment' %>
<%= render 'comments' %><br>
<%= will_paginate @comments %>
<% end %>
