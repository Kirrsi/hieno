<% if signed_in? %>
<h4 class="review">Add a review:</h4>
<%= form_for([@product, @product.comments.build]) do |f| %>

<div class="row">
  <div class="col-sm-4">
    <div class="form-group">
      <%= f.text_area :body, class:"form-control" %>
    </div>
    <div class="form-group">
      <div class="rating"></div>
    </div>
    <div class="form-group">
     <%= f.submit "Submit", class:"btn btn-warning" %><br>
    </div>
   </div>
  </div>
 <% end %>
<% end %>
